<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/item_fragment_app_list_top_ll_padding">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/item_fragment_app_list_icon_vertical_margin"
        android:layout_marginRight="@dimen/item_fragment_app_list_icon_right_margin"
        android:layout_marginTop="@dimen/item_fragment_app_list_icon_vertical_margin"
        android:gravity="center_vertical"
        android:maxHeight="@dimen/item_fragment_app_list_icon_side_size"
        android:maxWidth="@dimen/item_fragment_app_list_icon_side_size"
        android:minHeight="@dimen/item_fragment_app_list_icon_side_size"
        android:minWidth="@dimen/item_fragment_app_list_icon_side_size"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/appName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_name_vertical_margin"
            android:gravity="center_vertical"
            style="@style/AppNameStyle" />

        <TextView
            android:id="@+id/scanDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>